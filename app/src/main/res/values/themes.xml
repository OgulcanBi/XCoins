<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigationComponent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/definexBlueColor</item>
        <item name="colorPrimaryVariant">@color/definexBlueColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name = "android:windowBackground">@color/primaryBackgroundColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavViewTextStyle">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DefinexPrimaryButtonStyle">
        <item name="android:background">@drawable/blue_card_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThinItalicTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_light_italic</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThinItalicBlackTextStyle" parent="ThinItalicTextStyle">
        <item name="android:textColor">@color/primaryTitleTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldWhiteTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/primaryTitleTextColor</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>